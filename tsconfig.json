{
  "include": ["src/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": false,
    "noEmit": true,
    "noEmitHelpers": true,
    "removeComments": false,
    "importHelpers": true,
    "resolveJsonModule": true,

    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "typings"
  }
}
